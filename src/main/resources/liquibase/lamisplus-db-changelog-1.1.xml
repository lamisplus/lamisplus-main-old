<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet failOnError="false" author="Chukwuemeka Ilozue" id="1628678831400-146">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM pg_attribute
                WHERE attrelid = (SELECT oid FROM pg_class WHERE relname = 'patient')
                AND attname = 'patient_number_type';
            </sqlCheck>
        </preConditions>
        <addColumn tableName="patient" >
            <column name="patient_number_type" afterColumn="patient_number" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet failOnError="false" author="Chukwuemeka Ilozue" id="1628678831400-147">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM pg_attribute
                WHERE attrelid = (SELECT oid FROM pg_class WHERE relname = 'application_user_patient')
                AND attname = 'managed_type';
            </sqlCheck>
        </preConditions>
        <addColumn tableName="application_user_patient" >
            <column name="managed_type" afterColumn="archived" type="varchar(255)"/>
        </addColumn>
    </changeSet>
    <changeSet failOnError="false" author="Chukwuemeka Ilozue" id="1628678831400-149">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM pg_attribute
                WHERE attrelid = (SELECT oid FROM pg_class WHERE relname = 'application_user_patient')
                AND attname = 'program_code';
            </sqlCheck>
        </preConditions>
        <renameColumn columnDataType="VARCHAR"
                      newColumnName="program_code"
                      oldColumnName="managed_type"
                      tableName="application_user_patient"/>
    </changeSet>
    <changeSet failOnError="false" author="Chukwuemeka Ilozue" id="1634653439837-150">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="update_id_seq"></sequenceExists>
            </not>
        </preConditions>
        <createSequence sequenceName="update_id_seq"/>
    </changeSet>
    <changeSet failOnError="false" author="Chukwuemeka Ilozue" id="1634653439837-151">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="update"/>
            </not>
        </preConditions>
        <createTable tableName="update">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="update_pkey"/>
            </column>
            <column name="code" type="VARCHAR(2147483647)"/>
            <column name="name" type="VARCHAR(2147483647)"/>
            <column name="url" type="VARCHAR(2147483647)"/>
            <column name="date_created" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="created_by" type="VARCHAR(2147483647)"/>
            <column name="status" type="INT"/>
            <column name="size" type="FLOAT8"/>
            <column name="version" type="FLOAT8"/>
        </createTable>
    </changeSet>
    <changeSet failOnError="false" author="Chukwuemeka Ilozue" id="1628678831400-154">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="scheduler_job_info"/>
            </not>
        </preConditions>
        <sql>
            CREATE TABLE scheduler_job_info
            (
            job_id bigint NOT NULL GENERATED ALWAYS AS IDENTITY ( INCREMENT 1 START 1 MINVALUE 1 MAXVALUE 9223372036854775807 CACHE 1 ),
            job_name character varying ,
            job_group character varying ,
            job_status character varying ,
            job_class character varying,
            cron_expression character varying,
            description character varying,
            interface_name character varying,
            repeat_time bigint,
            cron_job boolean,
            CONSTRAINT scheduler_job_info_pkey PRIMARY KEY (job_id)
            )
        </sql>
    </changeSet>

    <changeSet failOnError="false" author="Chukwuemeka Ilozue" id="1628678831400-155">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM pg_attribute
                WHERE attrelid = (SELECT oid FROM pg_class WHERE relname = 'application_user')
                AND attname = 'details';
            </sqlCheck>
        </preConditions>
        <sql>
            ALTER TABLE application_user
            ADD COLUMN details jsonb;
        </sql>
    </changeSet>
</databaseChangeLog>